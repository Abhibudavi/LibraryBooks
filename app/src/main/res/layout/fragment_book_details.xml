<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.BookDetailsFragment"
    android:background="@color/off_gray"
    android:orientation="vertical"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/crd_nodata"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="For Any Clarification \nPlease Cotact BooksMagic \n ashishmishrahuf@gmail.com"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tv_empty"
            ></TextView>
    </android.support.v7.widget.CardView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edt_search"
        android:background="@drawable/search_background"
        android:hint="@string/str_srch"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:drawableRight="@drawable/ic_search_black_24dp"
        />



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rcl_books"
        android:background="@color/off_gray"
        >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>