<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailsEditActivity"
    android:orientation="vertical"
    android:background="@color/off_gray"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailsEditActivity"
    android:orientation="vertical"
    >




                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@mipmap/book"
                    android:id="@+id/img_book"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Titlename"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:id="@+id/txt_title"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Author"
                        android:textStyle="bold"
                        android:textAlignment="viewStart"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:layout_margin="10dp"
                        android:id="@+id/txt_author"
                        android:textColor="@color/black"
                        />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="2dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Binding \nConfirmation"
                                android:textStyle="bold"
                                android:textAlignment="textStart"
                                android:textSize="16sp"
                                android:paddingStart="10dp"
                                android:id="@+id/txt_binding"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                />

                                        <RadioGroup
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/rdgbinding"
                                            android:orientation="vertical"
                                            android:paddingStart="10dp"

                                            >

                                            <RadioButton
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Hard Cover"
                                                android:textColor="@color/black"
                                                android:id="@+id/rdhardcover"
                                                />
                                            <RadioButton
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Spiral"
                                                android:textColor="@color/black"
                                                android:id="@+id/rdbspiral"
                                                />

                                            <RadioButton
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="PaperBack"
                                                android:textColor="@color/black"
                                                android:id="@+id/rdbPaperBack"
                                                />

                                        </RadioGroup>

                        </LinearLayout>

